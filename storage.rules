rules_version = '2';

// Firebase Storage Security Rules para subida de imágenes de productos
service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para imágenes principales de productos
    match /products/main/{imageId} {
      // Permitir lectura a todos
      allow read: if true;
      
      // Permitir escritura solo a usuarios autenticados
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');  // Solo imágenes
    }
    
    // Reglas para imágenes adicionales de productos
    match /products/additional/{imageId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Reglas para imágenes de colores de productos
    match /products/colors/{imageId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 3 * 1024 * 1024  // Máximo 3MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Regla general para todas las carpetas de products
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}

